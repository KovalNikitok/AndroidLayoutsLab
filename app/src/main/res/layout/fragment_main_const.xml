<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main_const">

    <Button
        android:id="@+id/toLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/linear_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/toFrame"
        />
    <Button
        android:id="@+id/toRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/relative_text"
        app:layout_constraintBottom_toTopOf="@+id/toGrid"
        app:layout_constraintTop_toBottomOf="@+id/toLinear"
        />
    <Button
        android:id="@+id/toGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/grid_text"
        app:layout_constraintBottom_toTopOf="@+id/toFrame"
        app:layout_constraintTop_toBottomOf="@+id/toRelative"
        />
    <Button
        android:id="@+id/toFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/frame_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toLinear"
        />
</androidx.constraintlayout.widget.ConstraintLayout>